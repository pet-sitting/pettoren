<div class="container">
  <% @pets.each do |pet| %>
    <%= link_to pet_path(pet[:id]) do %>
      <div class="pet-card">
        <img src="<%= pet.picture_url %>" alt="dog's picture">
        <h4><%= pet.name %></h4>
        <p><%= pet.species %></p>
        <p><%= pet.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
