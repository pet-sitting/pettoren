<div class="container">
  <div class="pet-details">
    <h1><span><%= @pet.name %></span></h1>
    <%= cl_image_tag @pet.pet_pics.first.key, class: "pet-image"%>
    <h3><span>Owner: </span> <%= User.find(@pet.user_id).name %></h3>
    <div class="pet-species-breed">
      <p><span>Species: </span><%= @pet.species.capitalize %></p>
      <p><span>Breed: </span><%= @pet.breed.capitalize %></p>
    </div>
    <div class="pet-location">
      <p><span>Location: </span></p>
    </div>
    <div class="pet-description">
      <p><span>Description:</span> </p>
      <p><%= @pet.description %></p>
    </div>
  </div>
  <div class="booking-panel">
    <%= simple_form_for [@pet, @booking] do |f| %>
    <%= f.input :date, as: :date, html5: true %>
    <%= f.submit "Woof", class: 'btn btn-outline-primary my-2 my-sm-0' %>
    <% end %>
  </div>
</div>

