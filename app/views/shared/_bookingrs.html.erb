<div class="bookings">
  <% @requests.each do |booking| %>
    <div class="booking">
      <div class='booking-left'>
        <%= cl_image_tag booking.sitter.user_pic.key, class: 'avatar-bordered' %>
        <div class="booking-info">
          <div class="booking-info-title">
            <h3><%= booking.sitter.name.capitalize %></h3>
          </div>
          <div class="booking-info-details">
            <h4><strong>Booking date: </strong><%= booking.date %></h4>
            <h4><strong>Booking pet: </strong><%= booking.pet.name %></h4>
          </div>
        </div>
      </div>
      <div class="booking-actions">
        <% if booking.pending? %>
          <%= simple_form_for booking do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 2} %>
            <%= f.submit 'Accept' %>
          <% end %>
          <%= simple_form_for booking do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 1} %>
            <%= f.submit 'Reject' %>
          <% end %>
        <% elsif booking.rejected? %>
          <p class='booking-tag-rejected'><%= booking.status %></p>
        <% else %>
          <p class='booking-tag-accept'><%= booking.status %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
