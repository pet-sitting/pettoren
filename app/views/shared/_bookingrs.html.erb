<div class="bookings">
  <% @bookings.each do |booking| %>
    <div class="booking">
      <div class='booking-left'>
        <%= cl_image_tag booking.user.user_pic.key, class: 'avatar-bordered' %>
        <div class="booking-info">
          <div class="booking-info-title">
            <%= booking.user.name %>
          </div>
          <div class="booking-info-details">
            <%= booking.date %>
          </div>
        </div>
      </div>
      <div class="booking-actions">
        <% if booking.pending? %>
          <%= simple_form_for booking do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 2} %>
            <%= f.submit 'Accept', class: 'btn btn-info' %>
          <% end %>
          <%= simple_form_for booking do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 1} %>
            <%= f.submit 'Reject', class: 'btn btn-info' %>
          <% end %>
        <% else %>
          <p class='booking-tag'><%= booking.status %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
